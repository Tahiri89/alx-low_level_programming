#include "main.h"
#include <stdio.h>
#include <stdlib.h>

/**
 * main - main function
 * @argc: argument counter
 * @argv: vector of arguments 
 *Return: always 0                                                                                                                     
 */
int main(int argc, char *argv[])
{
	int i;
	int sum = 0;
	
	if (argc == 1)
		printf("0\n");
	for (i = 2; i < argc; i++)
	{
		if (!isdigit(argv[i]))
		{
			printf("Error\n");
			return (1);
		}
		else
		{
			sum += argv[i];
			printf("%d\n", sum);
			return (0);
		}
	}
}
				
	
